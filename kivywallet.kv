#:kivy 1.8.0

<RootWidget>:
    cols: 1
    input_name: name_input
    input_pw: pw_input
    label_myaddress: myaddress_label
    label_balance: balance_label
    label_unlockedbalance: unlockedbalance_label
    input_address: address_input
    input_amount: amount_input
    input_mixin: mixin_input
    input_paymentid: paymentid_input

    BoxLayout:
        size_hint_y: 0.4
        Label:
            text: "[b]Kivy Monero/Cryptonote GUI RPC Wallet[/b]"
            markup: True
            font_size: 20

    BoxLayout:
        size_hint_y: 0.1

    BoxLayout:
        size_hint_y: 0.35
        Label:
        Button:
            size_hint_x: 1.7
            text: "Launch bitmonerod daemon"
            on_press: root.launchdaemon()
        Label:
        Button:
            size_hint_x: 1.7
            text: "Launch simplewallet daemon"
            on_press: root.launchwallet()
        Label:

    BoxLayout:
        size_hint_y: 0.2

    BoxLayout:
        padding: 10,0,40,0
        size_hint_y: 0.3
        Label:
            text: "Wallet name: "
            size_hint_x: 0.2
            font_size: 16
        TextInput:
            id: name_input
            size_hint_x: 0.8
            font_size: 12
            text: root.walletname

    BoxLayout:
        padding: 10,0,40,0
        size_hint_y: 0.3
        Label:
            text: "Wallet password: "
            size_hint_x: 0.2
            font_size: 16
        TextInput:
            id: pw_input
            size_hint_x: 0.8
            font_size: 12
            text: root.walletpw
            password: True

    BoxLayout:
        size_hint_y: 0.5
        padding: 10,0,80,0
        Label:
            text: "Wallet address: \n [size=10](click address to copy)[/size]"
            markup: True
            size_hint_x: 0.3
            font_size: 16
            halign: 'center'
        Label:
            id: myaddress_label
            text: "[ref=addressselection]uninitialized[/ref]"
            markup: True
            size_hint_x: 0.7
            font_size: 10
            on_ref_press: root.selectaddress()

    BoxLayout:
        size_hint_y: 0.3
        Label:
            text: "Balance: "
            size_hint_x: 0.3
            font_size: 16

        Label:
            id: balance_label
            text: root.balance
            size_hint_x: 0.7
            markup: True
            font_size: 16

    BoxLayout:
        size_hint_y: 0.3
        Label:
            text: "Unlocked balance: "
            size_hint_x: 0.3
            font_size: 16
        Label:
            id: unlockedbalance_label
            text: root.unlockedbalance
            size_hint_x: 0.7
            markup: True
            font_size: 16

    BoxLayout:
        size_hint_y: 0.35
        Label:
        Button:
            text: "Refresh balance"
            on_press: root.checkbalance()
            font_size: 20
        Label:


    BoxLayout:
        size_hint_y: 0.2


    BoxLayout:
        padding: 10,0,40,0
        size_hint_y: 0.3
        Label:
            text: "Send to address:"
            size_hint_x: 0.2
        TextInput:
            id: address_input
            size_hint_x: 0.8
            font_size: 10
            multiline: False


    BoxLayout:
        padding: 10,0,40,0
        size_hint_y: 0.3
        Label:
            text: "Amount MRO:"
            size_hint_x: 0.2
        TextInput:
            id: amount_input
            size_hint_x: 0.8
            font_size: 10
            multiline: False


    BoxLayout:
        padding: 10,0,40,0
        size_hint_y: 0.3
        Label:
            text: "Mixin amount:"
            size_hint_x: 0.2
        TextInput:
            id: mixin_input
            size_hint_x: 0.8
            font_size: 10
            multiline: False


    BoxLayout:
        padding: 10,0,40,0
        size_hint_y: 0.3
        Label:
            text: "Payment ID:"
            size_hint_x: 0.2
        TextInput:
            id: paymentid_input
            size_hint_x: 0.8
            font_size: 10
            text: "DISABLED!!! Do not send funds to exchanges. Disabled payment id field is required for depositing on exchanges!"
            multiline: False


    BoxLayout:
        padding: 200,0,200,0
        size_hint_y: 0.35
        Button:
            text: "Transfer funds"
            on_press: root.transferfunds()
            font_size: 20

    BoxLayout:
        size_hint_y: 0.1
